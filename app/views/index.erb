       <br>
       <% @doctors.each do |doctor| %>
       

       <input id="checkbox_ID" type="checkbox" value=<%doctor.id%> > <%= doctor.name %>
       <%= doctor.department%>
       <br>
       <% end %>
<script>
document.getElementById('checkbox_ID').value = doctor.id;
</script>

       <input type="submit" class="btn btn-info" style="left: 20px;" value="submit">
     </form>
   </div>
   <%end%>
